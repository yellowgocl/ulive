.live-card .gallery-area .goods-item image {
    width: 100%;
    height: 100%;
}

.live-card .title {
    margin-left: 24rpx;
    margin-right: 24rpx;
}

.live-card .info-area{
    display: flex;
    justify-content: space-between;
    margin-top: 12rpx;
    margin-left: 24rpx;
    margin-right: 24rpx;
    align-items: center;
}
.live-card .info-area .author{
    width: 44rpx;
    height: 44rpx;
    border-radius: 22rpx;
    overflow: hidden;
}
.live-card .info-area .author-name{
    flex: 1;
    margin-left: 12rpx;
}
