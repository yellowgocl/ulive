.modal{
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 10000;    
    display: flex;
    flex-direction: column;
    align-items: center;
}
.modal .mask{
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,.6); 
    position: absolute;
}

.modal.layout-2{
    justify-content: flex-end !important;
}
.modal.layout-9{
    justify-content: center !important;
}

.modal .modal-card {
    background-color: white;
    display: flex;
    flex-direction: column;
    align-items: center;
    overflow: hidden;
    border-radius: 12rpx;
    position: relative;
    z-index: 1;
    transition: all 0.3s ease-out;
}
.modal.layout-2 .modal-card{
    border-bottom-left-radius: 0;
    border-bottom-right-radius: 0;
}
.modal .modal-card.visible{
    opacity: 1;
}
