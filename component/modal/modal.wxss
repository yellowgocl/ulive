.modal .modal-title .close{
    width: 64rpx;
    height: 64rpx;
}

.modal .modal-title .text{
    flex: 1;
    text-align: left;
}

.modal .modal-title {
    background-color: white;
    display: flex;
    align-items: center;
    width: 100%;
    padding-top: 20rpx;
    padding-bottom: 20rpx;
}
