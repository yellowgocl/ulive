page{
  height: 100%;
  background: white;
}
.add-address .add-form{
  background: #fff;
  width: 100%;
  height: auto;
  overflow: hidden;
}

.add-address .form-item{
  height: 112rpx;
  padding-left: 10rpx;
  border-bottom: 1px solid #d9d9d9;
  display: flex;
  align-items: center;
  padding-right: 31.25rpx;
}
.add-address .form-item .ic{
width: 44rpx;
height: 44rpx;
}

.add-address .input{
  flex: 1;
  height: 44rpx;
  line-height: 44rpx;
  overflow: hidden;
}

.add-address .form-default{
  height: 96rpx;
  padding-top: 28rpx;
  font-size: 28rpx;
  text-align: left;
  margin-top: 48rpx;
  margin-left: 20rpx;
}

.default-input{
  display: block;
  width: 240rpx;
  height: 40rpx;
  padding-left: 60rpx;
  line-height: 40rpx;
  background: url(http://yanxuan.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/sprites/checkbox-sed825af9d3-a6b8540d42.png) 1rpx -274rpx no-repeat;
  background-size: 24rpx 307rpx;
  font-size: 24rpx;
}


.default-input.selected{
  background: url(http://yanxuan.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/sprites/checkbox-sed825af9d3-a6b8540d42.png) 1rpx -114rpx no-repeat;
  background-size: 24rpx 307rpx;
}

.add-address .btns{
  position: fixed;
  bottom: 48rpx;
  left: 0;
  overflow: hidden;
  display: flex;
  width: 100%;

}

.add-address .cannel,.add-address .save{
  flex: 1;
  margin-left: 48rpx;
  margin-right: 48rpx;
